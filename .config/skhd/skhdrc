# change window focus within space
alt + ctrl - j : yabai -m window --focus south
alt + ctrl - k : yabai -m window --focus north
alt + ctrl - h : yabai -m window --focus west
alt + ctrl - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt + ctrl - s: yabai -m display --focus west
alt + ctrl - g: yabai -m display --focus east

# rotate layout clockwise
ctrl + alt + shift - r : yabai -m space --rotate 273

# flip along y-axis
ctrl + alt + shift - y : yabai -m space --mirror y-axis

# flip along x-axis
ctrl + alt + shift - x : yabai -m space --mirror x-axis

# toggle window float
ctrl + alt + shift - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
ctrl + alt + shift - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + alt + shift - e : yabai -m space --balance

# swap windows
shift + alt + ctrl - j : yabai -m window --swap south
shift + alt + ctrl - k : yabai -m window --swap north
shift + alt + ctrl - h : yabai -m window --swap west
shift + alt + ctrl - l : yabai -m window --swap east

# move window to display left and right
shift + alt + ctrl - p : yabai -m window --display west; yabai -m display --focus west;
shift + alt + ctrl - n : yabai -m window --display east; yabai -m display --focus east;

# move window to space #
ctrl + alt - 1 : yabai -m window --space 1;
ctrl + alt - 2 : yabai -m window --space 2;
ctrl + alt - 3 : yabai -m window --space 3;
ctrl + alt - 4 : yabai -m window --space 4;
ctrl + alt - 5 : yabai -m window --space 5;
ctrl + alt - 6 : yabai -m window --space 6;
ctrl + alt - 7 : yabai -m window --space 7;
ctrl + alt - 8 : yabai -m window --space 8;
ctrl + alt - 9 : yabai -m window --space 9;
ctrl + alt - 0 : yabai -m window --space 10;

# stop/start/restart yabai
ctrl + shift - q : yabai --stop-service
ctrl + shift - s : yabai --start-service
ctrl + shift - r : yabai --restart-service
