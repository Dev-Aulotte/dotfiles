# change window focus within space
shift + alt + cmd + ctrl - j : yabai -m window --focus south
shift + alt + cmd + ctrl - k : yabai -m window --focus north
shift + alt + cmd + ctrl - h : yabai -m window --focus west
shift + alt + cmd + ctrl - l : yabai -m window --focus east

#change focus between external displays (left and right)
shift + alt + cmd + ctrl - s: yabai -m display --focus west
shift + alt + cmd + ctrl - g: yabai -m display --focus east

# rotate layout clockwise
ctrl + alt + shift - r : yabai -m space --rotate 273

# flip along y-axis
ctrl + alt + shift - y : yabai -m space --mirror y-axis

# flip along x-axis
ctrl + alt + shift - x : yabai -m space --mirror x-axis

# toggle window float
ctrl + alt + shift - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
ctrl + alt + shift - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + alt + shift - e : yabai -m space --balance

# swap windows
shift + alt + ctrl - j : yabai -m window --swap south
shift + alt + ctrl - k : yabai -m window --swap north
shift + alt + ctrl - h : yabai -m window --swap west
shift + alt + ctrl - l : yabai -m window --swap east

# move window to display left and right
shift + alt + ctrl - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt + ctrl - g : yabai -m window --display east; yabai -m display --focus east;

# move window to space #
alt + shift - 1 : yabai -m window --space 1;
alt + shift - 2 : yabai -m window --space 2;
alt + shift - 3 : yabai -m window --space 3;
alt + shift - 4 : yabai -m window --space 4;
alt + shift - 5 : yabai -m window --space 5;
alt + shift - 6 : yabai -m window --space 6;
alt + shift - 7 : yabai -m window --space 7;
alt + shift - 8 : yabai -m window --space 8;
alt + shift - 9 : yabai -m window --space 9;
alt + shift - 0 : yabai -m window --space 0;

# stop/start/restart yabai
ctrl + shift - q : yabai --stop-service
ctrl + shift - s : yabai --start-service
ctrl + shift - r : yabai --restart-service
